{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist-server",
    "rootDir": ".",
    "types": ["node"],
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["dist", "**/_*.js"]
}
